<p style="color: green"><%= notice %></p>


<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">

  <strong>Email: </strong>
  <%= @friend.email %> |

  <strong>Phone: : </strong>
  <%= @friend.phone %> |

   <strong>Twitter: </strong>
  <%= @friend.twitter %> |
  </p>
  <hr class="my-4">
  
  <div >
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-secondary' %> &nbsp;
  <%= link_to "Back to friends", friends_path, class:'btn btn-secondary' %>
  <%= button_to "Destroy this friend", @friend, method: :delete, class:'btn btn-danger mt-3' %>
  </div>
</div>


